mixin settingsForm()
  .ribbon
  .card-main
    .card-container.mdl-grid
      .mdl-cell.mdl-cell--2-col.mdl-cell--hide-tablet.mdl-cell--hide-phone
      .card-content.mdl-color--white.mdl-shadow--4dp.content.mdl-color-text--grey-800.mdl-cell.mdl-cell--8-col
        form.form(action='/users/settings' method='POST')
          .mdl-card__title
            .mdl-card__title-text Edit Your Details
          .mdl-card__supporting-text
            .form-input.mdl-textfield.mdl-js-textfield
              label.mdl-textfield__label(for='name') Name
              input.mdl-textfield__input(type='text' name='name' value=user.name)
            .form-input.mdl-textfield.mdl-js-textfield
              label.mdl-textfield__label(for='email') E-Mail Address
              input.mdl-textfield__input(type='email' name='email' value=user.email)
          .mdl-card__actions
            input.form-action.mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.mdl-button--primary(type='submit' value='Update my account')
