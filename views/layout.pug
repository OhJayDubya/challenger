doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons")
    link(rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.deep_orange-orange.min.css")
    meta(name='viewport' content='width=device-width, initial-scale=1')
  body
    block header
      header.mdl-layout--fixed-header
        .mdl-layout__header.mdl-layout__header--waterfall
          .mdl-layout__header-row
            span.mdl-layout-title
              img.logo(src='images/logo.svg')
            .mdl-layout-spacer
              span.title.mdl-layout-title Challenger
            .mdl-layout-spacer
            button#more-button.mdl-button.mdl-js-button.mdl-button--icon.mdl-js-ripple-effect
              i.material-icons more_vert
            ul.mdl-menu.mdl-js-menu.mdl-menu--bottom-right.mdl-js-ripple-effect(for='more-button')
              li.mdl-menu__item 5.0 Lollipop
              li.mdl-menu__item 4.4 KitKat
              li.mdl-menu__item(disabled='') 4.3 Jelly Bean
              li.mdl-menu__item Android History
            
    block content

    block footer
      footer.mdl-mega-footer
        .mdl-mega-footer--top-section
          .mdl-mega-footer--left-section
            button.footer-button
              img.footer-icon(src="images/github.svg")
            button.footer-button
              img.footer-icon(src="images/linkedin.svg")
            button.footer-button
              img.footer-icon(src="images/twitter.svg")
          .mdl-mega-footer--right-section
            a.mdl-typography--font-light(href='#top')
              | Back to Top
              i.material-icons expand_less
        .mdl-mega-footer--middle-section
          p.mdl-typography--font-light Created by Owen James Wright

    block scripts
      script(defer src="https://code.getmdl.io/1.3.0/material.min.js")